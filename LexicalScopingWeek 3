            makeCacheMatrix <- function(x = matrix()){


          invers <- NULL
  
   set <- function(y){
  
        x <<- y
    
           invers <<- NULL
    
  }
  
  
                         get <- function() {x}
  
                 setInverse <- function(inverse) {invers <<- inverse}
  
  
            getInverse <- function() {invers}
  
  
  list(set = set, get = get, setInverse = setInverse, getInverse = getInverse)
  
  
}



